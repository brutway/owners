<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/StartupMainGrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/vertical_margin"
    android:layout_marginBottom="@dimen/vertical_margin"
    android:layout_marginLeft="@dimen/horizontal_margin"
    android:layout_marginRight="@dimen/horizontal_margin"
    android:columnCount="2"
    android:columnOrderPreserved="true"
    android:rowOrderPreserved="true"
    android:orientation="horizontal"
    tools:context="com.example.kual.Owners.MainActivity"
    tools:showIn="@layout/activity_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <Button
        android:id="@+id/ButtonContacts"
        android:layout_width="@dimen/grid_item_width"
        android:layout_height="@dimen/grid_item_height"
        android:drawableTop="@mipmap/ic_contacts"
        android:gravity="center"
        android:text="Контакты"/>

    <Button
        android:id="@+id/ButtonMessages"
        android:layout_width="@dimen/grid_item_width"
        android:layout_height="@dimen/grid_item_height"
        android:drawableTop="@mipmap/ic_messages"
        android:gravity="center"
        android:text="Сообщения"/>

    <Button
        android:id="@+id/ButtonRequests"
        android:layout_width="@dimen/grid_item_width"
        android:layout_height="@dimen/grid_item_height"
        android:drawableTop="@mipmap/ic_requests"
        android:gravity="center"
        android:text="Жалобы\nзаявки"/>

</GridLayout>